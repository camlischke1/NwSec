
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config device
	option name 'br-graveyard'
	option type 'bridge'
	list ports 'eth0'

config interface 'GRAVEYARD'
	option device 'br-graveyard'
	option proto 'static'
	option ipaddr '128.220.249.5'
	option gateway '128.220.249.1'
	option netmask '255.255.255.0'
	option ipv6 'off'
	list dns '8.8.8.8'
	list dns '1.1.1.1'
	option delegate '0'

config interface 'NETSEC'
	option proto 'static'
	option ipaddr '172.16.0.1'
	option netmask '255.255.255.0'
	option ipv6 'off'
	option device 'eth1'
	list dns '172.16.0.10'

config interface 'NETSECPUBLIC'
	option proto 'static'
	option device 'eth2'
	option ipaddr '192.168.15.1'
	option netmask '255.255.255.0'
	option gateway '128.220.249.5'
	option delegate '0'

